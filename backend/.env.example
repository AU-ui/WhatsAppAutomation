# --- Server ---
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:8000

# --- MongoDB ---
MONGODB_URI=mongodb://localhost:27017/whatsapp_platform
# Production: mongodb+srv://user:pass@cluster.mongodb.net/whatsapp_platform

# --- JWT Auth ---
JWT_SECRET=change_this_to_a_very_long_random_secret_key_min_64_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=another_very_long_random_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=30d

# --- Meta WhatsApp Cloud API ---
# Get from: https://developers.facebook.com/apps/
META_VERIFY_TOKEN=your_webhook_verify_token_set_this_yourself
META_APP_SECRET=your_meta_app_secret

# --- OpenAI ---
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500

# --- Stripe Payments (Optional) ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_BASIC_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID=price_...
STRIPE_ENTERPRISE_PRICE_ID=price_...

# --- Admin Super User ---
SUPER_ADMIN_EMAIL=admin@platform.com
SUPER_ADMIN_PASSWORD=change_this_immediately

# --- File Uploads ---
UPLOAD_PATH=./uploads
MAX_FILE_SIZE_MB=10

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# --- Logging ---
LOG_LEVEL=info
LOG_DIR=./logs
