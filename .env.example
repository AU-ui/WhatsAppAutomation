# =============================================
# WhatsApp SME Automation — Environment Config
# =============================================
# Copy this file to .env and fill in your values

# --- Claude API (Required) ---
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- Business Information (Customize this!) ---
BUSINESS_NAME=My SME Business
BUSINESS_DESCRIPTION=We sell quality products and provide excellent service.
BUSINESS_HOURS=Mon-Sat 9AM-6PM
BUSINESS_PHONE=+1234567890
BUSINESS_EMAIL=support@mybusiness.com
BUSINESS_WEBSITE=https://mybusiness.com
BUSINESS_LOCATION=123 Main Street, City, Country
BUSINESS_CURRENCY=USD

# --- WhatsApp Session ---
AUTH_DIR=./auth_info_baileys

# --- Database ---
DB_PATH=./data/sme_bot.db

# --- Admin Dashboard ---
DASHBOARD_PORT=3000
DASHBOARD_SECRET=change_this_to_a_strong_secret_key

# --- AI Settings ---
# Model: claude-opus-4-6 (best), claude-sonnet-4-6 (faster/cheaper)
AI_MODEL=claude-opus-4-6
# Max conversation history to send to Claude (messages)
MAX_HISTORY=20
# Auto-trigger handoff if user mentions these keywords (comma separated)
HANDOFF_KEYWORDS=human,agent,representative,person,manager,speak to someone,talk to someone

# --- Bot Behavior ---
# Welcome message shown to new customers
SHOW_WELCOME_MENU=true
# Auto-reply delay simulation (ms) — makes bot feel more natural
REPLY_DELAY_MS=1000
# Max messages per minute per customer (rate limit)
RATE_LIMIT_PER_MIN=10
